[
  {
    "context": "Editor",
    "bindings": {
      "cmd-d": "editor::DuplicateSelection",
      "ctrl-g": ["editor::SelectNext", { "replace_newest": false }],
      "cmd-/": ["editor::ToggleComments", { "advance_downwards": true }],
      "cmd-shift-up": "editor::MoveLineUp",
      "cmd-shift-down": "editor::MoveLineDown",
      "cmd-alt-l": "editor::Format",
      "ctrl-r": "editor::Rename",
      "cmd-b": "editor::GoToDefinition",
      "cmd-shift-b": "editor::GoToTypeDefinition",
      "cmd-i": "editor::GoToImplementation",
      "cmd-shift-i": "editor::ToggleInlayHints",
      "cmd-shift-r": "editor::FindAllReferences",
      "ctrl-q ctrl-p": "pane::ActivatePreviousItem",
      "ctrl-q ctrl-n": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Editor && mode == full",
    "bindings": {
      "cmd-f12": "outline::Toggle",
      "cmd-r": ["buffer_search::Deploy", { "replace_enabled": true }],
      "cmd-shift-o": "file_finder::Toggle",
      "cmd-l": "go_to_line::Toggle",
      "alt-enter": "editor::ToggleCodeActions"
    }
  },
  {
    "context": "BufferSearchBar",
    "bindings": {
      "shift-enter": "search::SelectPreviousMatch"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "enter": "project_panel::Open",
      "ctrl-r": "project_panel::Rename"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::NewTerminal"
    }
  },
  {
    "bindings": {
      "ctrl-q ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-q ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-q ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-q ctrl-j": "workspace::ActivatePaneDown",
      "cmd-k": "git_panel::ToggleFocus",
      "cmd-shift-k": "project_panel::ToggleFocus",
      "ctrl-t": "terminal_panel::ToggleFocus"
    }
  }
]
